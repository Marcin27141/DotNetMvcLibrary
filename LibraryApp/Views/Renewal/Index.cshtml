@model LibraryApp.Models.Database.Entities.Rental
@{
}

<h1 class="text-center">Renewal confirmation</h1>

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-6">
        <div>
            <h2 style="display: inline-block">Name:</h2>
            <p>@Model.BookCopy.Book.Title</p>
            <h2 style="display: inline-block">Author:</h2>
            <p>@Model.BookCopy.Book.Author</p>
            <h2 style="display: inline-block">Rental date:</h2>
            <p>@Model.RentalDate</p>
            <h2 style="display: inline-block">Current deadline:</h2>
            <p>@Model.OriginalReturnDeadline</p>
            <h2 style="display: inline-block">New deadline:</h2>
            <p>@Model.OriginalReturnDeadline.AddDays(30)</p>
        </div>
    </div>
</div>
