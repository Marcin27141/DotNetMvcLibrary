@model IEnumerable<LibraryApp.Models.Database.Entities.Rental>
@{

}

@section styles {
    <link rel="Stylesheet" href="~/css/rentals-styling.css" />
}

@if (Model.Any())
{
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @foreach (var rental in Model)
            {
                <div class="card mb-3">
                  <div class="row no-gutters">
                    <div class="col-lg-8 col-md-4">
                      <div class="card-body">
                        <h5 class="card-title">@rental.BookCopy.Book.Title</h5>
                        <p class="card-text author-text">@rental.BookCopy.Book.Author</p>
                        <p class="card-text deadline-text">Return deadline: @rental.CurrentDeadline</p>
                      </div>
                    </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="rental-buttons">
                                <button>Details</button>
                                <form method="get" asp-action="Renew">
                                    <input name="rentalId" value="@rental.RentalId" hidden />
                                    <button type="submit" style="width: 100%;">Renew</button>
                                </form>
                            </div>
                        </div>
                  </div>
                </div>
            }
        </div>
    </div>
} else
{
    <h2>Couldn't find any rentals</h2>
}

